<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cl.emphasize.TextEditorActivity">

    <TextView
        android:id="@+id/textPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/testprint_border"/>

    <TextView
        android:id="@+id/fileNameDisplay"
        android:layout_width="374dp"
        android:layout_height="28dp"
        android:ems="12"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        tools:layout_editor_absoluteX="4dp" />

    <EditText
        android:id="@+id/textEditor"
        android:layout_width="369dp"
        android:layout_height="470dp"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381"
        app:layout_constraintHorizontal_bias="0.533" />

    <Button
        android:id="@+id/textEditorSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_editor_save_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintVertical_bias="0.99" />

    <Button
        android:id="@+id/textEditorSaveAsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_editor_save_as_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintVertical_bias="0.99" />

</android.support.constraint.ConstraintLayout>
