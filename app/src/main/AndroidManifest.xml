<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cl.emphasize">

    <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/emphasize_512x512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextEditorActivity" />
        <activity android:name=".SaveAsActivity" />
        <activity android:name=".SettingsActivity" />

        <receiver
            android:name=".FileContentsWidget"
            android:label="@string/widget_name_blink">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/file_contents_widget_info" />
        </receiver>

        <activity android:name=".ChooseFileForWidgetActivity"></activity>
    </application>

</manifest>